# Maintainer: Ace! _SL/S <acesls@protonmail.com>
pkgname="slssteam"
pkgver=20251227120401
pkgrel=1
pkgdesc="Steamclient Mod"
arch=("i686" "x86_64")
url="https://github.com/AceSLS/SLSsteam"
license=("AGPL-3.0-only")

depends=("steam"
		"lib32-openssl"
		"lib32-glibc"
		"lib32-gcc-libs")

optdepends=("steam-native"
			"ccache: Speeds up compilation"
			"dotnet-runtime: sls-ticket-generator")

provides=("slssteam")
conflicts=("slssteam-git")

source=("https://github.com/AceSLS/SLSsteam/archive/refs/tags/$pkgver.tar.gz")
makedepends=("gcc"
			"dotnet-sdk")

#Disable stripping to not mess up disturb ticket-grabber
options=(!strip)

sha256sums=('e12621e94962839267e0b743c74f974a87eb3517d736e66abc362ccc55709c94')
validpgpkeys=("63AB8F4BF8A62EEEB8D8C7584410F8CF7129B2D6")

build() {
	cd "$srcdir/SLSsteam-$pkgver"
	make

	cd "$srcdir/SLSsteam-$pkgver/tools/ticket-grabber"
	./build.sh
}

package() {
	cd "$pkgdir"

	install -D "$srcdir/SLSsteam-$pkgver/bin/SLSsteam.so" "$pkgdir/usr/lib32/libSLSsteam.so"
	install -D "$srcdir/SLSsteam-$pkgver/bin/library-inject.so" "$pkgdir/usr/lib32/libSLS-library-inject.so"
	install -D "$srcdir/SLSsteam-$pkgver/res/SLSsteam.desktop" "$pkgdir/usr/share/applications/SLSsteam.desktop"
	install -D "$srcdir/SLSsteam-$pkgver/res/SLSsteam-native.desktop" "$pkgdir/usr/share/applications/SLSsteam-native.desktop"
	install -D "$srcdir/SLSsteam-$pkgver/res/logo.png" "$pkgdir/usr/share/pixmaps/SLSsteam.png"

	#Disabled until dev reaches main
	install -D "$srcdir/SLSsteam-$pkgver/tools/ticket-grabber/bin/Release/net9.0/linux-x64/publish/ticket-grabber" "$pkgdir/usr/bin/sls-ticket-grabber"
}
